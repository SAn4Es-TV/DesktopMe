<Window x:Class="DesktopMe.SettingsForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DesktopMe"
        xmlns:hc="https://handyorg.github.io/handycontrol"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        Title="Настройки" Height="200" Width="245">
    <Grid>
        <hc:NumericUpDown x:Name="height" ValueChanged="NumericUpDown_ValueChanged" 
            Margin="10,10,0,0"
                  hc:InfoElement.Title="Высота" Value="300"
                  Style="{StaticResource NumericUpDownExtend}" Width="100" Height="50" HorizontalAlignment="Left" VerticalAlignment="Top"/>
        <hc:NumericUpDown x:Name="width" ValueChanged="NumericUpDown_ValueChanged_1"
            Margin="120,10,0,0"
                  hc:InfoElement.Title="Ширина" Value="300"
                  Style="{StaticResource NumericUpDownExtend}" Width="100" Height="50" HorizontalAlignment="Left" VerticalAlignment="Top"/>
        <TextBlock x:Name="sensyvText" Text="Чувствительность: 1000" Margin="17,65,0,0" Height="25" VerticalAlignment="Top"/>
        <Slider x:Name="sensivity" VerticalAlignment="Center" Margin="10,20,10,0" Value="1000" Maximum="3000" ValueChanged="sensivity_ValueChanged"/>

        <Button x:Name="Save" Click="Save_Click" Content="Сохранить" Margin="0,0,80,10" VerticalAlignment="Bottom" HorizontalAlignment="Right"/>
        <Button x:Name="Cancel" Click="Cancel_Click" Content="Отмена" Margin="0,0,10,10" VerticalAlignment="Bottom" HorizontalAlignment="Right"/>
    </Grid>
</Window>
